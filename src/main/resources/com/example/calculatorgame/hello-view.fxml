            </opaqueInsets>
            <font>
               <Font size="50.0" />
            </font>
         </Label>
          <Button alignment="CENTER" contentDisplay="CENTER" layoutX="79.0" layoutY="244.0" onAction="#startGame" prefHeight="67.0" prefWidth="110.0" text="Start" textAlignment="CENTER">
