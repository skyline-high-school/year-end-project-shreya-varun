        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="512.0" prefWidth="512.0">
      <children>
      
          <Label alignment="CENTER" layoutX="6.0" layoutY="14.0" prefHeight="100.0" prefWidth="461.0" text="Calculator Game" textAlignment="CENTER">
